<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/bubbleReceivedColor"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Avatar (ícono) del propietario -->
        <ImageView
            android:id="@+id/ivOwnerAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/person"
            android:contentDescription="@string/desc_pet_image" />

        <!-- Contenedor de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del propietario -->
            <TextView
                android:id="@+id/tvOwnerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Propietario X"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Último mensaje -->
            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Último mensaje..."
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-03-29 08:15:00"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

