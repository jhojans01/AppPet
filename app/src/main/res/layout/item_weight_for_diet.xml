<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPesoForDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso: 0.0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvFechaForDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: "
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mascota:"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvPropietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propietario:"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvEstadoDieta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dieta asignada"
            android:textColor="@color/green"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnAsignarDieta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asignar Dieta"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

