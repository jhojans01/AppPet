<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Muestra el comportamiento -->
        <TextView
            android:id="@+id/tvComportamientoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comportamiento"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <!-- Muestra la fecha y hora del registro -->
        <TextView
            android:id="@+id/tvFechaHoraItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha/Hora"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- Botones para editar y eliminar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditBehavior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnDeleteBehavior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
