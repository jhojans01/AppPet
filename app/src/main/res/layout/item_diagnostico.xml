<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvEnfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🦠 Enfermedad: Gripe"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvMedicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💊 Medicamento: Antibiótico"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvVia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧪 Vía: Oral"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏰ Hora: 08:00"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Observaciones: Tomar con comida"
            android:textSize="15sp"
            android:textColor="#333333" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
