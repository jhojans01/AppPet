<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base de la aplicación -->
    <style name="Base.Theme.AppPet" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.AppPet" parent="Base.Theme.AppPet">
        <!-- Ajustes adicionales si deseas -->
    </style>

    <style name="ThemeOverlay.AppPet.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@drawable/rounded_dialog_bg</item>
    </style>

    <style name="RoundedFull">
        <!-- redondeo del 50 % en las cuatro esquinas = círculo -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="PetButton.Acc" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/card_pet_borde</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PetButton.Rej" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:strokeColor">@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="iconTint">@android:color/holo_red_dark</item>
    </style>
    <style name="AcceptButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <!-- contorno -->
        <item name="strokeColor">@color/accept_green</item>
        <item name="strokeWidth">1dp</item>

        <!-- fondo relleno suave -->
        <item name="backgroundTint">@color/accept_green_soft</item>

        <!-- icono y texto -->
        <item name="iconTint">@color/accept_green</item>
        <item name="android:textColor">@color/accept_green</item>
    </style>
    <style name="RejectButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <!-- contorno -->
        <item name="strokeColor">@color/reject_red</item>
        <item name="strokeWidth">1dp</item>

        <!-- fondo suave -->
        <item name="backgroundTint">@color/reject_red_soft</item>

        <!-- icono y texto -->
        <item name="iconTint">@color/reject_red</item>
        <item name="android:textColor">@color/reject_red</item>
    </style>
    <style name="PetDetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>


    <style name="PetDetailInfo">
        <item name="android:layout_width">match_parent</item> <!-- o wrap_content -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>




</resources>

